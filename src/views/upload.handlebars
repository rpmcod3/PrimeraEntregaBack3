<header>
  <a href="/products" class="logo"> Productos</a>

  <nav>
    <ul>
      <li><a href="/upload" class="btn">Upload</a></li>
      <li><a href="/carts" class="btn">Carrito</a></li>
    </ul>
  </nav>
</header>



<h1>Carga de Productos </h1>


<div class="upload">
    <form action="/upload" method="POST">
        <div class="upload__container--title">
            <input type="text" name="title" placeholder="Titulo">
        </div>
        <div class="upload__container--description">
            <input type="text" name="description" placeholder="Descripcion">
        </div>
        <div class="upload__container--code">
            <input type="text" name="code" placeholder="Codigo...">
        </div>
        <div class="upload__container--price">
            <input type="number" name="price" placeholder="Precio...">
        </div>
          <div class="upload__container--Stock">
            <input type="number" name="stock" placeholder="Stock...">
        </div>
         <div class="upload__container--category">
            <input type="text" name="category" placeholder="Categoria...">
        </div>
          <div class="upload__container--category">
            <input type="text" name="thumbnail" placeholder="Link de la imagen...">
        </div>
         <select id="status" name="status">
            <option value="true"> Activo </option>
            <option value="false"> Inactivo </option>
        </select>
        <div class="upload__container--button">
            <input type="submit" value="Subir">
        </div>
    </form>

</form>
</div>
